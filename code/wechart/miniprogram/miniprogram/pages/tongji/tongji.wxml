<!---------查询弹窗--------->
<!------------------------->
<van-popup bind:click-overlay="qxShow" show="{{ cxShow }}" position="bottom" custom-style="height: 45%;" >
    <view class="lables1">年份</view>
    <picker class="pick" mode="date" value="{{date}}" fields="year" data-column_name="year" bindchange="choiceDate">
      <input bindinput="onInput" data-column="year" class="input_text_form" value="{{year}}" type="text" name="year" disabled="disabled"></input>
    </picker>
    <view class="lables">客户名称</view>
    <picker bindchange="bindPickerChange2" value="{{index}}" data-column_name="customer" range="{{customer_picker_list}}">
      <input bindinput="onInput" data-column="customer" class="input_text_form"  value="{{customer}}" type="text" name="customer" disabled="disabled"></input>
    </picker>
  <view class="bottom_view" style="height:10%">
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="qxShow">取消</button>
    <button class="bt_bottom" hover-class="bt_bottom_hover" bindtap="sel1">查询</button>
  </view>
</van-popup>

